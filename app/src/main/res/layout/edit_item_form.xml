<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:orientation="vertical">

    <include layout="@layout/confirm_toolbar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <include layout="@layout/add_image_toolbar"/>

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <EditText
                            android:id="@+id/edtItemName"
                            android:layout_width="363dp"
                            android:layout_height="@dimen/txt_nor_height"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edt_whitebg"
                            android:hint="Tên món đồ"
                            android:paddingLeft="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#808080"
                            android:textSize="20dp"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <EditText
                            android:id="@+id/edtItemAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/txt_nor_height"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edt_whitebg"
                            android:hint="Địa chỉ"
                            android:paddingLeft="15dp"
                            android:textColor="#000000"
                            android:textColorHint="#808080"
                            android:textSize="20dp"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/txtError"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/txt_nor_height"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edt_whitebg"
                            android:text="Mô tả"
                            android:paddingLeft="15dp"
                            android:paddingTop="9dp"
                            android:textColor="@color/colorRed"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:visibility="invisible"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <EditText
                            android:id="@+id/edtItemDes"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edt_whitebg"
                            android:hint="Mô tả (tối thiểu 100 ký tự)"
                            android:gravity="top"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:textColor="#000000"
                            android:textColorHint="#808080"
                            android:textSize="20dp"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                </TableRow>
            </TableLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="132dp"
                        android:layout_height="@dimen/txt_nor_height"
                        android:paddingTop="6dp"
                        android:text="Chia sẻ"
                        android:paddingLeft="25dp"
                        android:textColor="#000000"
                        android:textColorHint="#808080"
                        android:textSize="22dp"/>

                <Spinner
                        android:id="@+id/spPrivacy"
                        android:layout_height="@dimen/txt_nor_height"
                        android:paddingTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp">

                </Spinner>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="132dp"
                        android:layout_height="@dimen/txt_nor_height"
                        android:paddingTop="6dp"
                        android:text="Danh mục"
                        android:paddingLeft="25dp"
                        android:textColor="#000000"
                        android:textColorHint="#808080"
                        android:textSize="22dp"/>

                <Spinner
                        android:id="@+id/spCategory"
                        android:layout_height="@dimen/txt_nor_height"
                        android:paddingTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp">

                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
