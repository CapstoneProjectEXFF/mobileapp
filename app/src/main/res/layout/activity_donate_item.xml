<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DonateItemActivity">

    <include layout="@layout/confirm_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/txt_padding"
            android:text="Người nhận"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/txtReceiverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/txt_padding"
            android:text="Tên"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/txt_padding"
        android:text="Danh sách đồ dùng "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textSize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/gvItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/txt_padding">

        </GridLayout>
    </ScrollView>
</LinearLayout>